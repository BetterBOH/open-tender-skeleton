{
  "name": "open-tender-skeleton",
  "version": "0.0.1",
  "description": "Skeletal React components for Open Tender client applications.",
  "repository": "https://github.com/BetterBOH/open-tender-skeleton",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=4.3.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "BABEL_ENV=production node_modules/.bin/babel --out-dir='dist' src",
    "start": "BABEL_ENV=production node_modules/.bin/babel -w --out-dir='dist' src"
  },
  "prettier": {
    "useTabs": false,
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "jsxBracketSameLine": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "Sanctuary Computer <dev@sanctuary.computer> (https://www.sanctuary.computer/)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "react": "^16.6.3"
  }
}
